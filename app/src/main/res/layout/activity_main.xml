<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/inv_white_three"
    android:gravity="center_horizontal"
    tools:ignore="MissingPrefix"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/load"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <include layout="@layout/loading_layout_home">

        </include>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/main_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--  Cabeçalho -->
        <LinearLayout
            android:id="@+id/cabecalho"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:background="#f3f5f6"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dip">

            <TextView
                android:id="@+id/txt_titulo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:text="R$ 120,00"
                android:textAppearance="@style/TextAppearance.FontPath"
                fontPath="fonts/DIN-Alternate-Bold.ttf"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />
        </LinearLayout>
        <!--  Cabeçalho -->


        <LinearLayout
            android:id="@+id/rodape"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="10dip">


            <Button
                android:id="@+id/contestar"
                style="@style/AppTheme.ButtonBlueStroke"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Contestar" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/quiz_lista_questions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="9dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/cabecalho"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@android:id/empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26 Dez 08:34" />


            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_resume_tutorial" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transporte" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AUTO POSTO SILGUEKRON" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="18dp"
                android:background="#d8d8d8">

            </View>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/ic_avatar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="STYLE PLATINUM "
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Final 7667" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_cart" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>